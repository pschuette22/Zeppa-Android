<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
    THINGS TO NOTE:
    
    	- Name style: (text color)_(outline_color, optional)_txt(size)sp
    	- Always use typeface sans
    	- Pete has been commenting more
    -->


    <!-- White w/ black outline -->

    <style name="white_black_txt14sp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="white_black_txt18sp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <!-- White no outline -->
    <style name="white_txt12sp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
    </style>
    
    
    <!-- Black w/ teal outline -->

	<style name="black_teal_txt14sp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">@color/teal_light</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:typeface">sans</item>
    </style>
    
	    <!-- Black no outline -->
	
	<style name="black_txt18sp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
    </style>
    
	<style name="black_txt12sp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>