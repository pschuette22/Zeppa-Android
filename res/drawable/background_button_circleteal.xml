<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape android:shape="oval">
            <solid android:color="@color/teal_transparent" />

            <stroke android:width="1dp" android:color="@color/blue" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="oval">
            <solid android:color="@color/blue" />

            <stroke android:width="1dp" android:color="@color/teal_transparent" />
        </shape></item>
    <item android:state_checked="true"><shape android:shape="oval">
            <solid android:color="@color/teal_transparent" />

            <stroke android:width="1dp" android:color="@color/gray_light" />
        </shape></item>
        
    <!-- Default  -->
    <item><shape android:shape="oval">
            <solid android:color="@color/teal" />

            <stroke android:width="1dp" android:color="@color/gray_light" />
        </shape></item>

</selector>