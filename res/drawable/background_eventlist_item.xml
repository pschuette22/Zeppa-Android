<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/white" />
            <stroke android:color="@color/yellow_highlight" android:width="2dp"/>
        </shape></item>
    <item android:state_pressed="true"><shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/teal_transparent" />
            <stroke android:color="@color/teal_light" android:width="2dp"/>
        </shape></item>
    <item><shape>
            <corners android:radius="5dp" />
            <stroke android:color="@color/gray_light" android:width="1dp"/>
            <solid android:color="@color/white" />
        </shape></item>

</selector>