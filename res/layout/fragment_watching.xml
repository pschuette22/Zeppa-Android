<?xml version="1.0" encoding="utf-8"?>
<uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/watchingfragment_ptr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/watching_loaderview"
        layout="@layout/view_loaderview"
        android:visibility="gone" />

    <ListView
        android:id="@+id/watchingListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@drawable/background_fragment"
        android:divider="@color/white_eggshell"
        android:dividerHeight="10dp"
        android:paddingBottom="1dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="1dp" />

</uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout>