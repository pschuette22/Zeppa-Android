<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- FOCUSED -->
    <item android:state_focused="true"><shape>
            <corners android:radius="4dp" />

            <solid android:color="@color/teal_light" />

            <stroke android:width="3dp" android:color="@color/teal_dark" />
        </shape></item>

    <!-- PRESSED -->
    <item android:state_pressed="true"><shape>
            <corners android:radius="4dp" />

            <solid android:color="@color/teal" />

            <stroke android:width="4dp" android:color="@color/teal_transparent" />
        </shape></item>

    <!-- DISABLED -->
    <item android:state_enabled="false"><shape>
            <corners android:radius="4dp" />

            <solid android:color="@color/gray" />

            <stroke android:width="2dp" android:color="@color/black" />
        </shape></item>

    <!-- DEFAULT/ all other states -->
    <item><shape>
            <corners android:radius="4dp" />

            <gradient android:angle="90" android:endColor="@color/teal" android:startColor="@color/teal_dark" />

            <stroke android:width="2dp" android:color="@color/teal_dark" />
        </shape></item>

</selector>